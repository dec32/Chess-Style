{
  "manifest_version": 2,
  "name": "Chess Style",
  "version": "0.1",
  "description": "Customize your piece set on lichess.org and chess.com.",
  "icons": {
    "281": "res/icon.png"
  },

  "browser_action": {
    "default_title": "Chess Style",
    "default_popup": "src/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://lichess.org/*"],
      "js": ["src/content_lichess.js"]
    },
    {
      "matches": ["*://www.chess.com/*"],
      "js": ["src/content_chess.js"]
    }
  ],
  "permissions": ["storage", "tabs"]
}